{
  "compilerOptions": {
    "outDir": "./build/cjs/",
    "sourceMap": true,
    "target": "es5",
    "lib": ["es5", "es6", "es7"],

    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": false,
    "importHelpers": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/**/*.test.ts", "./src/legacy-tests"]
}
